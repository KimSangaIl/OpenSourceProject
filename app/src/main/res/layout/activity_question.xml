<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundbox">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="필수 체크리스트"
                android:textColor="@color/cbnu"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="흡연"
                android:textSize="18sp"/>
            <RadioGroup
                android:id="@+id/smoke"
                android:layout_width="199dp"
                android:layout_height="25dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/yesSmoke"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="흡연" />
                <RadioButton
                    android:id="@+id/noSmoke"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="비흡연" />
            </RadioGroup>


            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="운동"
                android:textSize="18sp"/>
            <RadioGroup
                android:id="@+id/exercise"
                android:layout_width="206dp"
                android:layout_height="24dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/yesExercise"
                    android:layout_width="124dp"
                    android:layout_height="match_parent"
                    android:text="함" />
                <RadioButton
                    android:id="@+id/noExercise"
                    android:layout_width="83dp"
                    android:layout_height="25dp"
                    android:text="안함" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="청소"
                android:textSize="18sp"/>
            <RadioGroup
                android:id="@+id/clean"
                android:layout_width="206dp"
                android:layout_height="24dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/yesClean"
                    android:layout_width="124dp"
                    android:layout_height="23dp"
                    android:text="함" />
                <RadioButton
                    android:id="@+id/noClean"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="안함" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="실내취식"
                android:textSize="18sp"/>
            <RadioGroup
                android:id="@+id/eatIn"
                android:layout_width="206dp"
                android:layout_height="24dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="130dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
                <RadioButton
                    android:id="@+id/yesEat"
                    android:layout_width="124dp"
                    android:layout_height="match_parent"
                    android:text="함" />
                <RadioButton
                    android:id="@+id/noEat"
                    android:layout_width="88dp"
                    android:layout_height="24dp"
                    android:text="안함" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:text="잠버릇"
                android:textSize="18sp"/>
            <RadioGroup
                android:id="@+id/sleepHab"
                android:layout_width="206dp"
                android:layout_height="24dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="160dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/yesHap"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:text="있음" />
                <RadioButton
                    android:id="@+id/noHap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="없음" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:text="게임"
                android:textSize="18sp"/>
            <RadioGroup
                android:id="@+id/game"
                android:layout_width="206dp"
                android:layout_height="24dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="190dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/yesGame"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="함" />
                <RadioButton
                    android:id="@+id/noGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="안함" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:text="음주"
                android:textSize="18sp"/>
            <RadioGroup
                android:id="@+id/alcohol"
                android:layout_width="206dp"
                android:layout_height="24dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="220dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/yesAlcohol"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="함"/>
                <RadioButton
                    android:id="@+id/noAlcohol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="안함" />
            </RadioGroup>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#808080" />

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundbox">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="선택 체크리스트"
                android:textColor="@color/cbnu"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="기상시간"
                android:textSize="18sp"/>
            <Spinner
                android:id="@+id/spi_wakeup"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="40dp"
                android:entries="@array/wakeup"/>

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="취침시간"
                android:textSize="18sp"/>
            <Spinner
                android:id="@+id/spi_sleep"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="70dp"
                android:entries="@array/sleep"/>

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="선호 층수"
                android:textSize="18sp"/>
            <Spinner
                android:id="@+id/spi_floor"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="100dp"
                android:entries="@array/floor"/>

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="반수/편입"
                android:textSize="18sp"/>
            <Spinner
                android:id="@+id/spi_exam"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="130dp"
                android:entries="@array/exam"/>

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:text="샤워시간"
                android:textSize="18sp"/>
            <Spinner
                android:id="@+id/spi_shower"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="160dp"
                android:entries="@array/shower"/>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:text="본가 방문 주기"
                android:textSize="18sp" />
            <Spinner
                android:id="@+id/spi_goHome"
                android:layout_width="150dp"
                android:layout_height="22dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="190dp"
                android:entries="@array/goHome"/>

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:text="음주 빈도"
                android:textSize="18sp" />
            <Spinner
                android:id="@+id/spi_alcPeriod"
                android:layout_width="150dp"
                android:layout_height="22dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="220dp"
                android:entries="@array/alcPeriod"/>

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:text="샤워 시간대"
                android:textSize="18sp"/>
            <RadioGroup
                android:id="@+id/when_shower"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="250dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/morning"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="아침" />
                <RadioButton
                    android:id="@+id/evening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="저녁" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:text="공부장소"
                android:textSize="18sp" />
            <RadioGroup
                android:id="@+id/study_place"
                android:layout_width="250dp"
                android:layout_height="24dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="280dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/dormitory"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:text="기숙사" />
                <RadioButton
                    android:id="@+id/ectDormitory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="그 외 장소" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="310dp"
                android:text="더위"
                android:textSize="18sp" />
            <RadioGroup
                android:id="@+id/hot"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="310dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/veryHot"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="많이 탐" />
                <RadioButton
                    android:id="@+id/middleHot"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="보통" />
                <RadioButton
                    android:id="@+id/notHot"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="잘 안탐" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="340dp"
                android:text="추위"
                android:textSize="18sp"/>
            <RadioGroup
                android:id="@+id/cold"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="340dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/veryCold"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="많이 탐" />
                <RadioButton
                    android:id="@+id/middleCold"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="보통" />
                <RadioButton
                    android:id="@+id/notCold"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="잘 안탐" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="370dp"
                android:text="기숙사"
                android:textSize="18sp"/>
            <RadioGroup
                android:id="@+id/dorm"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="370dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/yangJin"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:text="양진재" />
                <RadioButton
                    android:id="@+id/yangSung"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:text="양성재" />
                <RadioButton
                    android:id="@+id/gaeSung"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:text="개성재" />
            </RadioGroup>
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_endReg"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:text="회원가입 하기"
            android:background="@drawable/cbnu_border"
            android:backgroundTint="@color/cbnu"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>
</ScrollView>